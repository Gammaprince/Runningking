<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".FeedDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_above="@id/action_divider"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:background="@color/accent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"
                app:tint="@color/md_white_1000"
                android:id="@+id/back"
                android:layout_gravity="center"
                />

            <com.raees.android.latobold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textColor="@color/md_white_1000"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                />


        </LinearLayout>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:maxHeight="300dp"
                   android:id="@+id/image"
                   android:visibility="gone"
                   />

               <com.potyvideo.library.AndExoPlayerView
                   android:id="@+id/andExoPlayerView"
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:background="#000"
                   app:andexo_aspect_ratio="aspect_match"
                   android:layout_height="250dp"
                   />

               <WebView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/content"
                   />


           </LinearLayout>

       </ScrollView>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/action_divider"
        android:background="#16000000"
        android:layout_above="@id/likeView"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:id="@+id/likeView"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="8dp"
            android:id="@+id/like"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/like_icon"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/like"
                android:contentDescription="@string/app_name" />

            <com.raees.android.latonormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:id="@+id/like_text"
                android:text="Like"
                android:textColor="@color/font"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/share"
            android:padding="8dp"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/share_outline"
                android:contentDescription="@string/app_name" />

            <com.raees.android.latonormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:text="Share"
                android:textColor="@color/font"
                />


        </LinearLayout>



    </LinearLayout>



</RelativeLayout>