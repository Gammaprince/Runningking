<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/user_profile"
                    />

                <com.raees.android.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codegente Jaipur"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/name"
                    android:textColor="@color/font"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#610070C8"
                android:padding="15dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <com.raees.android.latonormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rank"
                        android:textColor="@color/lightfont"
                        />

                    <com.raees.android.latobold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font"
                        android:id="@+id/rank"
                        android:textSize="30sp"
                        android:text="#1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <com.raees.android.latonormal
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Won"
                        android:textColor="@color/lightfont"
                        />

                    <com.raees.android.latobold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/amount"
                        android:textColor="@color/font"
                        android:textSize="30sp"
                        android:text="19,000 â‚¹"
                        />

                </LinearLayout>

            </LinearLayout>

            <com.raees.android.latonormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playing since march 2021"
                android:id="@+id/since"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>