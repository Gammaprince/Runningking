<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".wallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent"
            android:padding="15dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/back"
                app:tint="@color/md_white_1000" />

            <com.raees.android.latobold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="My Balance"
                android:textColor="@color/md_white_1000"
                android:textSize="16sp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <com.raees.android.latonormal
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="Total Balance"
                            android:textColor="@color/lightfont" />

                        <com.raees.android.latobold
                            android:id="@+id/total_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0 ₹"
                            android:textColor="@color/font"
                            android:textSize="16sp" />

                        <com.raees.android.latobold
                            android:id="@+id/add_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/green_button"
                            android:text="ADD CASH"
                            android:textColor="@color/md_white_1000" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#17000000" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.raees.android.latonormal
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="AMOUNT ADDED ( UTILISED )"
                                    android:textColor="@color/lightfont"
                                    android:textSize="12sp" />

                                <com.raees.android.latobold
                                    android:id="@+id/deposit_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="0 ₹"
                                    android:textColor="@color/font" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/deposit_info"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="8dp"
                                android:src="@drawable/info_icon"
                                app:tint="@color/md_blue_A200" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#17000000" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.raees.android.latonormal
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="WINNINGS"
                                    android:textColor="@color/lightfont"
                                    android:textSize="12sp" />

                                <com.raees.android.latobold
                                    android:id="@+id/winnig_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="0 ₹"
                                    android:textColor="@color/font" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/winning_info"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="8dp"
                                android:src="@drawable/info_icon"
                                app:tint="@color/md_blue_A200" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#17000000" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.raees.android.latonormal
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CASH BONUS"
                                    android:textColor="@color/lightfont"
                                    android:textSize="12sp" />

                                <com.raees.android.latobold
                                    android:id="@+id/cash_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="0 ₹"
                                    android:textColor="@color/font" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/cash_info"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="8dp"
                                android:src="@drawable/info_icon"
                                app:tint="@color/md_blue_A200" />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/transaction_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp">

                        <com.raees.android.latonormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Recent Transactions"
                            android:textColor="@color/lightfont" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right_arrow"
                            app:tint="@color/lightfont" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/addCash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA"
        android:clickable="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#EAEAEA"
            android:clickable="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/accent"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/back_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/back"
                    app:tint="@color/md_white_1000" />

                <com.raees.android.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Add Cash"
                    android:textColor="@color/md_white_1000"
                    android:textSize="16sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/wallet_color_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/wallet_color_icon" />

                <com.raees.android.latonormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/wallet_color_icon"
                    android:text="Current Balance"
                    android:textColor="@color/font"
                    android:textSize="13sp" />


                <com.raees.android.latonormal
                    android:id="@+id/new_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="₹0"
                    android:textColor="@color/font"
                    android:textSize="13sp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white">


                <EditText
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@id/depost_500"
                    android:background="@drawable/edittext"
                    android:hint="Amount to add"
                    android:inputType="number"
                    android:textSize="13sp" />


                <com.raees.android.latonormal
                    android:id="@+id/depost_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dp"
                    android:layout_toLeftOf="@id/depost_1000"
                    android:background="@drawable/shape_square_border"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:text="₹1000" />


                <com.raees.android.latonormal
                    android:id="@+id/depost_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/shape_square_border"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:text="₹2000" />

            </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/upis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <LinearLayout
                        android:id="@+id/gpay_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/md_white_1000"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/googlepay" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <com.raees.android.latobold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Google Pay"
                                android:textColor="@color/font" />

                            <com.raees.android.latobold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Auto approve" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/phonepe_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/md_white_1000"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/phone_pe" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <com.raees.android.latobold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Phone Pe"
                                android:textColor="@color/font" />

                            <com.raees.android.latobold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Auto approve" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paytm_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/md_white_1000"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/paytm" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.raees.android.latobold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Paytm"
                                android:textColor="@color/font" />

                            <com.raees.android.latobold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manual approve by admin" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/coin_payments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/md_white_1000"
                    android:padding="10dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/crypto_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.raees.android.latobold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Coin Payment"
                            android:textColor="@color/font" />

                        <com.raees.android.latobold
                            android:id="@+id/crypto_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Crypto deposit" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/razorpay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/md_white_1000"
                    android:padding="10dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/rzrpay_f" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.raees.android.latobold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Razorpay"
                            android:textColor="@color/font" />

                        <com.raees.android.latobold
                            android:id="@+id/crypto_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Debit card, net banking, upi" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/paytm_gateway"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_white_1000"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/qrcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        />
                    <Button
                        android:id="@+id/donwloadQR"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textStyle="bold"
                        android:background="#6FDC1A"
                        android:text="Download QR Code"/>
                </LinearLayout>
            </LinearLayout>
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:background="@drawable/round_btn"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/whatsapp" />

            <com.raees.android.latobold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Direct Deposit"
                android:textColor="@color/toolbarFont"
                android:textSize="16sp" />


        </LinearLayout>
        <com.raees.android.latobold
            android:id="@+id/deposit_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/green_button"
            android:gravity="center"
            android:padding="18dp"
            android:text="ADD CASH"
            android:textColor="@color/md_white_1000"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>